<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/home.css">

    <!-- font awesome cdn -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    
    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<!-- jquery cdn -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

</head>
<body>
    <!-- Heading -->
    <section id="head">
        <div id="heading">
            <h1 id="text-heading">
                <i class="fas fa-tasks"></i>
                ToDo Application
            </h1>
        </div>
    </section>

    <!-- form for taking input of task details -->
    <section id="tasks">
        <div id="task-submission">
            <form action="/create-task" method="post" class="flex flex-direction-column">
                <div class="form-group">
                    <div class="label">
                        <label for="description">Task Description</label>
                    </div>
                    <div>
                        <input class="form-control" type="text" name="description" placeholder="What do you need to do?">
                    </div>
                </div>
    
                <div class="row">
                    <div class="col">
                        <div class="label">
                            <label for="category">Category</label>
                        </div>
                        <div>
                            <select name="category" aria-label="Default select example" class="form-select">
                                <option selected>Choose a category</option>
                                <option value="Personal">Personal</option>
                                <option value="Work">Work</option>
                                <option value="School">School</option>
                                <option value="Cleaning">Cleaning</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="label">
                            <label for="dueDate">Due Date</label>
                        </div>
                        <div>
                            <input name="dueDate" class="form-control" type="date">
                        </div>
                    </div>
                </div>
                <div id="add-del-buttons">
                    <!-- add button -->
                    <div>
                        <button type="submit" id="add-task"><i class="fas fa-plus"></i> Add Task</button>
                    </div>
                    <!-- delete button -->
                    <button id="del-task" type="button"><i class="far fa-trash-alt"></i> Delete Tasks</button>

                </div>
            </form>
        </div>
        <!-- filter task -->
        <div id="filter-task">
            
            <div id="select-category">
                <div>
                    <label for="filtered-category">Filter Tasks</label>
                </div>
                <select name="filtered-category" aria-label="Default select example" class="form-select" id="filtered-category">
                    <option selected>Select a category to filter tasks</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div id="filter-btn-container">
                <button id="filter-btn" type="button"><i class="fas fa-filter"></i> Filter Tasks</button>
            </div>
        </div>

        <!-- Displaying the task list -->
        <div id="task-list">
            <% for(let i of tasks_list){ %>
                <div class="task-card">
                    <div class="checkboxes"><input type="checkbox" value=<%= i._id %>></div>
                    <div class="description-date-container">
                        <div class="description"><%= i.description %></div>
                        <div class="task-date">
                            <i class="fas fa-calendar-alt"></i>
                            <% d=new Date(i.dueDate) %>
                            <span><%= months[d.getMonth()] %> <%= d.getDate() %>, <%= d.getFullYear() %></span>
                        </div>
                    </div>
                    <div class="category">
                        <h5><%= i.category %></h5>
                    </div>
                </div>
            <%}%>
        </div>


    </section>

    <script src="js/home.js"></script>
</body>
</html>